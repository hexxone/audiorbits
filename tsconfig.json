{
	"compilerOptions": {
		"outDir": "./dist/tsc",
		"target": "ES2020",
		"module": "ES2020", // commonjs | esnext
		"moduleResolution": "node",
		"esModuleInterop": false, // TODO
		"emitDecoratorMetadata": false,
		"sourceMap": false,
		"removeComments": true,
		"baseUrl": ".",
		"paths": {
			"three": [
				"node_modules/three/src/Three"
			]
		},
		"lib": [
			"dom"
		]
	},
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"**/*.asc",
		"**/better-docs/**"
	]
}