{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/tsc",
        "target": "ES2021",
        "module": "ES2020",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "sourceMap": false,
        "removeComments": true,
        "baseUrl": ".",
        "noImplicitAny": false,
        "lib": ["dom", "ES5"]
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["**/*.asc"],
    "types": [
        "./src/we_utils/src/gles.d.ts",
        "./src/we_utils/src/glsl.d.ts",
        "./src/we_utils/src/XRWebGL.d.ts",
        "./src/we_utils/src/ICUE.d.ts",
        "./src/we_utils/src/worker-loader.d.ts"
    ]
}
