{
	"compileOnSave": false,
	"compilerOptions": {
		"outDir": "./dist/tsc",
		"paths": {
			"we_utils/*": ["src/we_utils/*"],
			"three.ts/*": ["src/we_utils/src/three.ts/*"]
		},
		"target": "ES2021",
		"module": "ES2020",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"sourceMap": false,
		"removeComments": true,
		"baseUrl": ".",
		"noImplicitAny": false,
		"allowJs": true,
		"lib": ["dom", "ES2020", "ES6"],
		"forceConsistentCasingInFileNames": true,
		// "strict": true // TOOD later
	},
	"types": ["*.d.ts"],
	"include": ["./src/**/*.ts"],
	"exclude": ["**/*.asc"],

}
