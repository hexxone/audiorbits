{
	"editor.codeActionsOnSave": {
		"source.fixAll": true
	},
	"tslint.enable": false,
	"prettier.eslintIntegration": false,
	"eslint.lintTask.enable": true,
	"eslint.debug": true,
	"eslint.packageManager": "yarn",
	"eslint.workingDirectories": [
		{
			"mode": "location"
		}
	],
	"eslint.format.enable": true,
	"eslint.alwaysShowStatus": true,
	"eslint.lintTask.options": "./src/ --ext js,ts,jsx,tsx -c ./.eslintrc.json --ignore-path ./.eslintignore --fix",
	"search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"**/*.code-search": true,
		"**/docs": true
	}
}